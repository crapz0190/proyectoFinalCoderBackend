<section class="bg-zinc-900 mx-auto text-center pt-40 h-screen">
  <button
    class="text-center text-stone-200 tracking-wider font-bold border border-slate-300 rounded-md w-3/12 mt-5 px-5 py-2 bg-zinc-700 cursor-pointer hover:text-black hover:bg-emerald-500 duration-300"
    onclick="location.href='/api/sessions/auth/github'">Registrarse con GitHub</button>

  <div class="flex items-center justify-center mt-10 w-3/12 mx-auto">
    <div class="border border-b-2 border-stone-200 w-full mr-5"></div>
    <div class="uppercase text-stone-200 font-bols text-md">o</div>
    <div class="border border-b-2 border-stone-200 w-full ml-5"></div>
  </div>

  <form class="w-3/12 md:w-4/12 text-stone-200 mt-10 mx-auto bg-zinc-800 rounded-md pb-5" action="/api/sessions/signup" method="post"
    class="w-2/6 text-stone-200 mt-10 mx-auto bg-zinc-800 rounded-md pb-5">
    <p class="text-2xl uppercase text-left pt-10 pl-10 font-bold">signup</p>
    <fieldset class="w-full bg-zinc-800 border-transparent rounded-md flex flex-col items-center p-5 gap-2">
      <section class="w-full flex flex-col p-5 gap-2 px-10">
        <input type="text" name="first_name" placeholder="firt name" class="w-full px-3 py-3 bg-zinc-700 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none">
        <input type="text" name="last_name" placeholder="last name" class="w-full px-3 py-3 bg-zinc-700 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none">
        <input type="email" name="email" placeholder="email" class="w-full px-3 py-3 bg-zinc-700 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none">
        <input type="Number" name="age" placeholder="age" class="w-full px-3 py-3 bg-zinc-700 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none">
        <input type="password" name="password" placeholder="password" class="w-full px-3 py-3 bg-zinc-700 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none">
      </section>

      <button onclick="location.href='/login'"
        class="text-center text-black font-bold rounded-md w-10/12 px-4 py-2 bg-emerald-500 cursor-pointer hover:bg-emerald-300 duration-300">Sign
        Up</button>
    </fieldset>
  </form>
  <p class="text-stone-200 text-center mt-2">Don&apos;t have an account? <a href="/login" class="font-bold ">Login</a></p>
</section>