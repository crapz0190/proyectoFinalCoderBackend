  {{#if ticket}}
    <h2>Detalles del Ticket</h2>
    <p>ID del Ticket: {{ ticket._id }}</p>
    <p>Fecha de Compra: {{ ticket.purchase_datetime }}</p>
    <p>Total de la Compra: {{ ticket.amount }}</p>
    <!-- Agrega más detalles según la estructura de tu ticket -->
  {{/if}}

  {{#if error}}
    <h2>Error</h2>
    <p>{{ error }}</p>
    {{#if productsNotPurchased}}
      <h3>Productos no Comprados</h3>
      <ul>
        {{#each productsNotPurchased}}
          <li>{{ this }}</li>
        {{/each}}
      </ul>
    {{/if}}
  {{/if}}